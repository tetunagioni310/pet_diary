<div class="container">
  <div class="row">
    <div class="col pb-5 mb-5">
      <h2 class="py-5">管理者ログイン</h2>

      <%= form_with model: @admin, url: admin_session_path, method: :post do |f| %>
      <table class="customer_info customer_form">
        <thead>
          <th></th>
          <th></th>
          <th></th>
        </thead>
        
        <tbody>
          <tr></tr>
          <tr></tr>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "ログイン", class: "btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
      
    </div>
  </div>
</div>
