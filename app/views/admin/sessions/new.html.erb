<div class="container">
  <div class="row">
    <div class="col pb-5 mb-5">
      <div class="col-sm-6">

        <div class="h2 py-5">管理者ログイン</div>

        <%= form_with model: @admin, url: admin_session_path, method: :post do |f| %>

            <div class="form-group row">
              <%= f.label :email, "メールアドレス", class: "col-form-label col-4" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-8" %>
            </div>

            <div class="form-group row">
              <%= f.label :password, "パスワード", class: "col-form-label col-4" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-8" %>
            </div>

            <div class="form-group row">
              <div class="col-4"></div>
              <div class="col-8 px-0">
                <% if devise_mapping.rememberable? %>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                <% end %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-4"></div>
              <div class="col-8 px-0"><%= f.submit "ログイン", class: "btn btn-success" %></div>
            </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
