<div class="container">
  <div class="row">
    <div class="col-md-10 m-auto">
      <div class="h2 bold pb-5">会員一覧</div>
      <div class="col text-field admin-customers custom-table">
        <table class="col text-center">
          <tr class="border-bottom">
            <th>名前</th>
            <th>メール</th>
            <th>投稿</th>
            <th></th>
          </tr>

          <% if @customers.count >= 1 %>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.nick_name %></td>
              <td><%= customer.email %></td>
              <td><%= link_to "一覧", admin_customer_posts_path(customer.id), class: "btn btn-success" %></td>
              <td><%= link_to customer.is_deleted?, edit_admin_customer_path(customer.id), class: "other-link" %></td>
            </tr>
            <% end %>
          <% else %>
            <tr>
              <td>
                <p class="no-date">
                  登録されていません
                </p>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>