<div class="container">
  <div class="row">
    <div class="col-md-6 col-lg-8 pb-5 m-auto">
      <div class="h4 bold pb-5">グループ</div>

        <div class="mb-5">
          <%= form_with model: @group, url: admin_groups_path, method: :post do |f| %>
            <div class="row col form-group">
              <div class="col-sm-4 bold"><%= f.label :group_name, "グループ名", class: "col-form-label" %></div>
              <div class="col-sm-4"><%= f.text_field :group_name, placeholder: "グループ名", class: "form-control" %></div>
              <div class="col-sm-4"><%= f.submit "新規登録", class: "btn btn-success" %></div>
            </div>
          <% end %>
        </div>

        <div class="col text-field">
          <table class="col">
            <thead>
              <th colspan="3">グループ名</th>
            </thead>

            <tbody>
              <% @groups.each do |group| %>
                <tr>
                  <td class="col-6"><%= group.group_name %></td>
                  <td class="col-3">
                    <%= link_to "編集", edit_admin_group_path(group.id), class: "btn btn-success" %>
                  </td>
                  <td class="col-3">
                     <%= link_to "削除", admin_group_path(group.id), method: :delete , class: "btn btn-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</div>