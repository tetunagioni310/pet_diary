<div class="container">
  <h3><%= @customer.nick_name %>さんの投稿一覧</h3>
  <div class="row">
    <div class="col">
      <div class="col text-field">
        <div class="row col mx-0 py-2 px-0">
          <div class="col-md-4 p-1 mx-0"></div>
          <div class="d-flex col-md-8 p-2 text-center small text-muted">
            <div class="col-4 px-0">作成日</div>
            <div class="col-4 px-0">コメント</div>
            <div class="col-4 px-0">いいね</div>
          </div>
        </div>
         <% if @posts.count >= 1 %>
           <% @posts.each do |post| %>

              <div class="row col mx-0 py-2 px-0">

               <div class="col-md-4 p-1 mx-0">
                 <%= link_to post.post_title.truncate(10), admin_customer_post_path(@customer.id,post.id), class: "other-link" %>
                </div>

               <div class="d-flex col-md-8 p-2 text-center small text-muted">
                 <div class="col-4 px-0">
                   <%= post.created_at.strftime("%m/%d") %>
                 </div>
                 <div class="col-4 px-0">
                   <%= post.comments.count %>件
                 </div>
                 <div class="col-4 px-0">
                   <%= post.likes.count %>件
                 </div>
                </div>

             </div>
           <% end %>
         <% else %>
           <tr>
             <td colspan="4">
               <p class="no-data">投稿はありません</p>
             </td>
           </tr>
         <% end %>

        <%= paginate @posts %>
      </div>

    </div>
  </div>
  <div class="mt-5">
    <%= link_to  admin_customers_path(@customer.id), class: "default-color other-link" do %>
      <i class="fas fa-solid fa-reply mr-2"></i>会員一覧
    <% end %>
  </div>
</div>