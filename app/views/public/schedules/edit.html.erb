<div class="container">
  <h4 class="col-lg-5 m-auto h4 bold">スケジュール編集</h4>
  <div class="row">
    <div class="col-lg-5 m-auto">
      <%= form_with model: @schedule, url: public_schedule_path, method: :patch do |f| %>
      <%= render "public/shared/error_messages", resource: @schedule %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>

      <div class="col text-field">
        <div class="col">
          <%= f.label :schedule_title, "スケジュール名", class: "col-form-label" %>
          <%= f.text_field :schedule_title, class: "form-control" %>
        </div>

        <div class="col">
          <%= f.label :schedule_content, "内容", class: "col-form-label" %>
          <%= f.text_area :schedule_content, rows: "5", class: "form-control" %>
        </div>

        <div class="col">
          <%= f.label :start_time, "予定日", class: "col-form-label" %>
          <div class="col px-0">
            <%= f.date_select :start_time, {order: [ :year, :month, :day ], use_month_numbers: true}, {class: "form-control-sm px-0"} %>
          </div>
        </div>

        <div class="col py-3">
          <div><%= f.submit "変更を保存", class: "btn btn-success btn-block" %></div>
        </div>
      </div>

      <% end %>
    </div>
  </div>
  <div class="col-lg-5 mx-auto my-5">
    <%= link_to  public_schedule_path(@schedule.id), class: "default-color other-link" do %>
      <i class="fas fa-solid fa-reply mr-2"></i>スケジュール一詳細
    <% end %>
  </div>
</div>