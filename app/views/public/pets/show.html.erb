<div class="container">
  <h2>
    <%= @pet.pet_name %>くんの詳細ページ
    <%= link_to public_customer_path(@pet.customer_id), class: "btn btn-sm p-0 mx-2" do %>
      <i class="fas fa-2x fa-solid fa-user mb-1"></i>
    <% end %>
  </h2>
  <div class="pet-show row">

      <div class="introduction-field col-lg-6">
        <table>
          <tr>
            <th class="col-3"></th>
            <td class="col-9"><%= @pet.group.group_name %></td>
          </tr>

          <tr>
            <th>名前</th>
            <td><%= @pet.pet_name %></td>
          </tr>

          <tr>
            <th>誕生日</th>
            <td><%= @pet.birthday %></td>
          </tr>

          <tr>
            <th>年齢</th>
            <td><%= @pet.age %>歳</td>
          </tr>

          <tr>
            <th>性別</th>
            <td><%= @pet.gender %></td>
          </tr>
          <tr>
            <th>紹介</th>
            <td><%= @pet.pet_introduction%></td>
          </tr>

          <tr>
            <td colspan="2">
              <% if @pet.customer_id == current_customer.id %>
              <div class="pet-nav">
                <%= link_to "編集", edit_public_pet_path(@pet.id), class: "btn" %>
                <%= link_to "アイテム", public_items_path, class: "btn" %>
                <%= link_to "ワーク", public_pets_work_path(@pet.id), class: "btn" %>
                <%= link_to "削除", public_pet_path(@pet.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn" %>
                <%= link_to public_customer_path(@pet.customer_id), class: "btn btn-sm" do %>
                  <i class="fas fa-2x fa-solid fa-user"></i>
                <% end %>
              </div>
              <% end %>
            </td>
          </tr>
        </table>
      </div>

      <div class="pet-profile col-lg-6">
        <%= image_tag @pet.get_pet_image(400,400) %>
      </div>

  </div>
  <div class="my-5">
    <%= link_to  public_pets_path, class: "color other-link" do %>
      <i class="fas fa-solid fa-reply"></i>ペット一覧へ
    <% end %>
  </div>
</div>