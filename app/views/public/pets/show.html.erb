<div class="container">
  <div class="row">
    <h2 class="mr-3"><%= @pet.pet_name %>くんの詳細ページ</h2>
    <%= link_to public_customer_path(@pet.customer_id), class: "user-icon" do %>
      <i class="fas fa-2x fa-solid fa-user ml-1"></i>
    <% end %>
  </div>

  <div class="pet-show row">

      <div class="introduction-field col-lg-6">
        <table>
          <tr>
            <th class="col-3"></th>
            <td class="col-9"><%= @pet.group.group_name %></td>
          </tr>

          <tr>
            <th>名前</th>
            <td><%= @pet.pet_name %></td>
          </tr>

          <tr>
            <th>誕生日</th>
            <td><%= @pet.birthday %></td>
          </tr>

          <tr>
            <th>年齢</th>
            <td><%= @pet.age %>歳</td>
          </tr>

          <tr>
            <th>性別</th>
            <td><%= @pet.gender %></td>
          </tr>
          <tr>
            <th>紹介</th>
            <td><%= @pet.pet_introduction%></td>
          </tr>

          <tr>
            <td colspan="2">
              <% if @pet.customer_id == current_customer.id %>
              <div class="pet-nav">
                <%= link_to "編集", edit_public_pet_path(@pet.id), class: "btn" %>
                <%= link_to "消耗品", public_items_path, class: "btn" %>
                <%= link_to "作業", "#", class: "btn" %>
                <%= link_to "削除", public_pet_path(@pet.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn" %>
              <% end %>
              </div>
            </td>
          </tr>
        </table>
      </div>

      <div class="pet-profile col-lg-6">
        <%= image_tag @pet.get_pet_image(400,400) %>
      </div>

  </div>

</div>