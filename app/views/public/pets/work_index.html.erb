<div class="container">
  <div class="h4 bold"><%= link_to @pet.pet_name, public_pet_path(@pet.id), class: "default-color other-link" %><%= @pet.pet_gender %>のワーク一覧</div>
  <div class="row">
    <div class="col">
      <div class="work-index px-0 col">
        <div class="work-list text-field col">
            <% if @works.count >= 1 %>
            <table class="col">
              <thead>
                <tr>
                  <th>日付</th>
                  <th>ワーク</th>
                  <th>アイテム</th>
                </tr>
              </thead>

              <tboby>
                <% @works.each do |work| %>
                <tr>
                  <td class="col-3"><%= link_to work.created_at.strftime("%m/%d"), public_work_path(work.id), class: "btn-links" %></td>
                  <td class="col-3"><%= work.work_name %></td>
                  <td class="col-5">
                      <!--消費アイテム取得-->
                      <% work_details = WorkDetail.where(work_id: work.id)%>
                      <% work_details.each do |work_detail| %>
                        <%= work_detail.item.item_name %>(<%= work_detail.amount_used %>g)<br>
                      <% end %>
                  </td>
                </tr>
                <% end %>
              </tboby>
            </table>
            <% else %>
            <table class="col">
              <tr>
                <td colspan="4" class="text-center">
                  <p class="no-data">
                    ワークはありません
                  </p>
                </td>
              </tr>
            </table>
            <% end %>
        </div>
    </div>
    </div>
  </div>
  <div class="mt-5 mb-3">
    <%= link_to  public_pet_path(@pet.id), class: "default-color other-link" do %>
      <i class="fas fa-solid fa-reply mr-2"></i><%= @pet.pet_name + @pet.pet_gender %>の詳細ページ
    <% end %>
  </div>
</div>