<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="col-10 mx-auto profile-field">
        <table class="col-10 mx-auto">
          <tr>
            <td colspan="2">
              <%= image_tag @customer.get_customer_image(200,200), class: "customer-image" %>
            </td>
          </tr>
          <tr>
            <td colspan="2" class="text-center bold"><%= @customer.email %></td>
          </tr>
          <tr>
            <td colspan="2" class="text-center bold"><%= @customer.nick_name %></td>
          </tr>
          <tr>
            <td class="text-center"><%= @customer.followers.count %><%= link_to "フォロー", public_customer_followings_path(@customer.id) %></td>
            <td class="text-center"><%= @customer.followings.count %><%= link_to "フォロワー", public_customer_followers_path(@customer.id) %></td>
          </tr>
          <tr>
            <td colspan="2">
              <%= link_to  member_info_edit_public_customers_path, class: "btn btn-outline-secondary btn-block" do %>
                <i class="fas fa-user-cog"></i>
              <% end %>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <%= link_to "プロフィール", public_customer_path(@customer.id), class: "btn btn-outline-secondary btn-block" %>
            </td>
          </tr>
        </table>
    </div>
    </div>
    <div class="col-lg-8 pet-index">
        <h2><%= current_customer.nick_name %>さんのペット一覧</h2>
        <% if @customer.id == current_customer.id %>
          <%= link_to "新規登録", new_public_pet_path, class: "btn btn-success"%>
        <% end %>

        <div class="pet-list">
          <% @pets.each do |pet| %>
          <div class="pet-link">
            <%= image_tag pet.get_pet_image(200,200) %><br>
            <%= link_to  pet.pet_name, public_pet_path(pet.id), class: "btn btn-outline-warning" %>
          </div>
          <% end %>
        </div>
        
    </div>
  </div>
</div>