<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="mb-5">ペット新規登録</h2>

      <%= form_with model: @pet, url: public_pets_path, method: :post do |f| %>
        <%= render "public/shared/error_messages", resource: @pet %>

        <div class="row">
          <div class="col-sm-6">
            <div class="form-group row">
              <%= f.label :pet_name, class: "col-3 col-form-label" %>
              <%= f.text_field :pet_name, placeholder: "ペット名", class: "col-7 form-control" %>
            </div>

            <div class="form-group row">
              <%= f.label :group_id, class: "col-3 col-form-label" %>
              <%= f.select :group_id, options_from_collection_for_select(Group.all, :id, :group_name), { prompt: '選択してください'}, { class: 'col-7 form-control' , required: true } %>
            </div>

            <div class="form-group row">
              <%= f.label :gender, class: "col-3 col-form-label" %>
              <%= f.select :gender, options_for_select(Pet.genders.map { |key, value| [key.humanize, key] }), {prompt: "選択してください"}, class: "col-7 form-control" %>
            </div>

            <div class="form-group row">
              <%= f.label :age, class: "col-3 col-form-label" %>
              <%= f.text_field :age, class: "col-7 form-control" %>　<p class="col-form-label">才</p>
            </div>

            <div class="form-group row">
              <%= f.label :birthday, class: "col-3 col-form-label" %>
              <%= f.text_field :birthday, placeholder: "2022-01-01", class: "col-7 form-control" %>
            </div>

            <div class="form-group row">
              <%= f.label :pet_image, class: "col-3 col-form-label" %>
              <%= f.file_field :pet_image, accept: "image/*", class: "col-8 pl-0" %>
            </div>
          </div>

          <div class="col-sm-6">
            <div class="form-group row">
              <%= f.label :pet_introduction, class: "col-3 col-form-label" %>
              <%= f.text_area :pet_introduction, rows: "10", class: "col-7 form-control" %>
            </div>
          </div>
        </div>

        <div class="row col-sm-6">
          <div class="col-3"></div>
          <div class="col-7 p-0"><%= f.submit "新規登録", class: "btn btn-success btn-block text-center" %></div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="my-5">
    <%= link_to  public_pets_path, class: "color other-link" do %>
      <i class="fas fa-solid fa-reply"></i>ペット一覧へ
    <% end %>
  </div>
</div>