<div class="container">
  <div class="row">
    <div class="col">

        <div class="text-field col-md-10 mx-auto">
          <h3 class="text-center">以下を使用して<%= @work.pet_names.join(" ") %>の『<%= @work.work_name %>』を実行します</h3>
          <table class="col p-0 m-0">
            <tr class="col text-center">
              <th class="col-6"></th>
              <th>在庫</th>
              <th>使用分</th>
              <th>残り</th>
            </tr>

            <% @use_items.each do |use_item| %>
              <tr>
                <td class="bold"><%= use_item.item.item_name%>(<%= use_item.amount_used %>g)</td>
                <% item = Item.find_by(id: use_item.item_id)%>
                <td class="text-center">
                  <%= remainder = item.total_capacity / use_item.amount_used %>
                </td>
                <td class="text-center"><%= @work.pet_names.count %></td>
                <td class="text-center"><%= remainder - @work.pet_names.count %></td>
              </tr>
            <% end %>

          </table>
        </div>

        <div class="mx-auto mt-4 text-center col-sm-3">
          <%= form_with model: @work, url: public_works_path, method: :post do |f| %>
            <% @work.pet_ids.each do |pet_id| %>
              <%= f.hidden_field :pet_ids, multiple: true, value: pet_id %>
            <% end %>
            <%= f.hidden_field :work_name, value: @work.work_name %>

            <%= f.submit "確定", class: "btn btn-success btn-block" %>
          <% end %>
        </div>
    </div>
  </div>
</div>