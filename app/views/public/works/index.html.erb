<div class="container">
  <div class="row">

    <div class="work-index px-0 col">
      <h2>ワーク一覧</h2>
      <div class="work-list text-field col">
          <% if @works.count >= 1 %>
          <table class="col">
            <thead>
              <th>日付</th>
              <th>ペット</th>
              <th>ワーク</th>
              <th>アイテム</th>
            </thead>
  
            <tboby>
              <% @works.each do |work| %>
              <tr>
                <td class="col-2"><%= link_to work.created_at.strftime("%m/%d"), public_work_path(work.id), class: "btn-links" %></td>
                <td class="col-3"><%= link_to work.pet.pet_name, public_pets_work_path(work.pet.id), class: "btn-links" %></td>
                <td class="col-2"><%= work.work_name %></td>
                <td class="col-6">
                    <!--消費アイテム取得-->
                    <% work_details = WorkDetail.where(work_id: work.id)%>
                    <% work_details.each do |work_detail| %>
                      <%= work_detail.item.item_name %>(<%= work_detail.amount_used %>g)<br>
                    <% end %>
                </td>
              </tr>
              <% end %>
            </tboby>
          </table>
          <% else %>
          <table class="col">
            <tr>
              <td colspan="4" class="text-center">
                <div class="no-works">
                  ワークはありません
                </div>
              </td>
            </tr>
          </table>
          <% end %>
      </div>
    </div>
  </div>
</div>