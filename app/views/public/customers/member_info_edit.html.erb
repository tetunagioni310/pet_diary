<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-5">会員情報編集</h2>
      <%= form_with model: @customer, url: member_info_update_public_customers_path, method: :patch do |f| %>
        
        <table>
          
          <tr>
            <td><%= f.label :email, "メールアドレス", class: "col-form-label" %></td>
            <td><%= f.text_field :email, class: "form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :nick_name, "ニックネーム", class: "col-form-label" %></td>
            <td><%= f.text_field :nick_name, class: "form-control" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
            <td><%= link_to "退会", quit_public_customers_path, class: "btn btn-danger" %></td>
          </tr>
          
        </table>
        
      <% end %>
    </div>
  </div>
</div>