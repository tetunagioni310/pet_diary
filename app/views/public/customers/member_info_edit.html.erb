<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="my-5">会員情報編集</h2>
      <%= form_with model: @customer, url: member_info_update_public_customers_path, method: :patch do |f| %>
      <%= render "public/shared/error_messages", resource: @customer %>

        <table>
          <tr>
            <td><%= f.label :email, class: "col-form-label" %></td>
            <td><%= f.text_field :email, class: "form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :nick_name, class: "col-form-label" %></td>
            <td><%= f.text_field :nick_name, class: "form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label :customer_image, class: "col-form-label" %></td>
            <td><%= f.file_field :customer_image, class: "pl-0" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "変更を保存", class: "btn btn-success mr-5" %>
              <%= link_to "退会", quit_public_customers_path, class: "btn btn-danger ml-5" %>
            </td>
          </tr>
        </table>

      <% end %>
    </div>
  </div>
  <div class="my-5">
    <%= link_to  member_info_public_customers_path, class: "color other-link" do %>
      <i class="fas fa-solid fa-reply"></i>マイページ
    <% end %>
  </div>
</div>