<div class="container">

  <div class="row">

    <!--サイドバー-->
    <div class="col-lg-4 py-5">
      <div class="col-lg-10 m-auto profile-field">
        <table class="col-11 mx-auto">
          <tr>
            <td colspan="2">
              <%= image_tag @customer.get_customer_image(200,200), class: "customer-image" %>
            </td>
          </tr>
          <tr>
            <td colspan="2" class="text-center bold"><%= @customer.email %></td>
          </tr>
          <tr>
            <td class="text-center bold"><%= @customer.nick_name %></td>
            <td class="text-center">
              <% if current_customer.following?(@customer) %>
                <%= link_to "フォロー解除", public_customer_relationships_path(@customer.id), class: "btn-sm btn-links shadow-none", method: :delete %>
              <% else %>
                <%= link_to "+フォロー", public_customer_relationships_path(@customer.id), class: "btn-sm btn-links shadow-none", method: :post %>
              <% end %>
            </td>
          </tr>
          <tr>
            <td class="text-center"><%= @customer.followings.count %><%= link_to "フォロー", public_customer_followings_path(@customer.id) %></td>
            <td class="text-center"><%= @customer.followers.count %><%= link_to "フォロワー", public_customer_followers_path(@customer.id) %></td>
          </tr>
          <tr>
            <td colspan="2">
              <%= link_to  member_info_edit_public_customers_path, class: "btn-links btn-block text-center" do %>
                <i class="fas fa-user-cog"></i>
              <% end %>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <%= link_to "ペット一覧", public_customers_pet_path(@customer.id), class: "btn-links btn-block text-center" %>
            </td>
          </tr>
        </table>
      </div>
    </div>

    <!--メイン-->
    <div class="col-lg-8">

      <div class="col-lg-10 mx-auto">
        <div class="col row text-center">
          <h4 class="col bold">
            <%= @customer.nick_name %>さんのプロフィール
          </h4>
        </div>
      </div>

      <div class="text-field col-10 m-auto pt-5">
        <div class="col-10 self-introduction">
          <p><%= @customer.introduction %></p>
          <% if @customer.id == current_customer.id %>
            <%= link_to "コメントを編集", edit_public_customer_path(current_customer.id), class: "btn btn-light" %>
          <% end %>
        </div>


       <div class="area col-10">
          <input type="radio" name="tab_name" id="tab1" checked>
          <label class="tab_class" for="tab1">タブ1</label>
          <div class="content_class col">
            <% @likes.each do |like| %>
              <div class="col text-field likes-content">
                <div class="col row">
                  <%= image_tag like.post.customer.get_customer_image(50,50)%>
                  <%= link_to like.post.customer.nick_name, public_customer_path(like.post.customer.id)%>
                </div>


                <ul class="col my-2">
                  <li><%= like.post.post_title %></li>
                  <li><%= like.post.post_content%></li>
                  <li><%= link_to "詳細へ", public_post_path(like.post.id)%></li>
                </ul>
              </div>
            <% end %>
          </div>

          <input type="radio" name="tab_name" id="tab2" >
          <label class="tab_class" for="tab2">タブ2</label>
          <div class="content_class">コンテンツ2</div>

          <input type="radio" name="tab_name" id="tab3" >
          <label class="tab_class" for="tab3">タブ3</label>
          <div class="content_class">コンテンツ3</div>
      </div>
      </div>



      </div>

    </div>
  </div>
</div>

