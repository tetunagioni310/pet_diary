<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="col-10 mx-auto profile-field">
        <table class="col-10 mx-auto">
          <tr>
            <td colspan="2">
              <%= image_tag @customer.get_customer_image(200,200), class: "customer-image" %>
            </td>
          </tr>
          <tr>
            <td colspan="2" class="text-center bold"><%= @customer.email %></td>
          </tr>
          <tr>
            <td colspan="2" class="text-center bold"><%= @customer.nick_name %></td>
          </tr>
          <tr>
            <td class="text-center"><%= @customer.followers.count %><%= link_to "フォロー", public_customer_followings_path(@customer.id) %></td>
            <td class="text-center"><%= @customer.followings.count %><%= link_to "フォロワー", public_customer_followers_path(@customer.id) %></td>
          </tr>
          <tr>
            <td colspan="2">
              <%= link_to  member_info_edit_public_customers_path, class: "btn btn-outline-secondary btn-block" do %>
                <i class="fas fa-user-cog"></i>
              <% end %>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <%= link_to "プロフィール", public_customer_path(@customer.id), class: "btn btn-outline-secondary btn-block" %>
            </td>
          </tr>
        </table>
    </div>
    </div>

    <div class="col-lg-8 align-items-end my-3">
      <div class="row my-5 mx-auto">
        <h3><%= @customer.nick_name %>さんのプロフィール</h3>
        <div class="ml-3">
          <% if current_customer.following?(@customer) %>
            <%= link_to "フォロー解除", public_customer_relationships_path(@customer.id), class: "btn btn-sm btn-outline-light", method: :delete %>
          <% else %>
            <%= link_to "+フォロー", public_customer_relationships_path(@customer.id), class: "btn btn-sm btn-outline-light", method: :post %>
          <% end %>
        </div>
      </div>

      <div class="col-11 self-introduction">
        <p><%= @customer.introduction %></p>
        <% if @customer.id == current_customer.id %>
          <%= link_to "コメントを編集", edit_public_customer_path(current_customer.id), class: "btn btn-light" %>
        <% end %>
      </div>
    </div>
  </div>
</div>