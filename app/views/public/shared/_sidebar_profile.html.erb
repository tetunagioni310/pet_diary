<div class="col-lg-4 py-5">
      <div class="col-lg-11 profile-field text-field">
        <table class="col-lg-11 mx-auto">
          <tr>
            <td colspan="2" class="col-8">
              <%= image_tag customer.get_customer_image(550,550), class: "customer-image" %>
            </td>
          </tr>
          <tr>
            <td colspan="2" class="text-center bold"><%= customer.email %></td>
          </tr>
          <tr>
            <td colspan="2" class="text-center bold"><%= customer.nick_name %></td>
          </tr>
          <tr>
            <td class="text-center bold"><%= link_to "#{customer.followings.count}フォロー", public_customer_followings_path(customer.id), class: "follow-link" %></td>
            <td class="text-center bold"><%= link_to "#{customer.followers.count}フォロワー", public_customer_followers_path(customer.id), class: "follow-link" %></td>
          </tr>
          <tr>
            <td colspan="2">
              <%= link_to  member_info_edit_public_customers_path, class: "btn-links btn-block text-center" do %>
                <i class="fas fa-user-cog"></i>
              <% end %>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <%= link_to "プロフィール", public_customer_path(customer.id), class: "btn-links btn-block text-center" %>
            </td>
          </tr>
        </table>
    </div>
    </div>