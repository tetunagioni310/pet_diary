<div class="container">
  <h2>お気に入りアイテム</h2>
  <div class="row">
    <div class="col">
      <table class="col">
        <thead>
          <th>id</th>
          <th>表示名</th>
          <th></th>
        </thead>

        <tbody>
        <% @favorite_items.each do |favorite_item| %>
        <tr>
          <td>
            <%= favorite_item.id %>
          </td>
          
          <td>
            <%= favorite_item.favorite_item_name %>
          </td>

          <% favorite_item_details = FavoriteItemDetail.where(favorite_item_id: favorite_item.id)%>
          <td>
            <% favorite_item_details.each do |favorite_item_detail| %>
              <%= favorite_item_detail.item.item_name %><br>
            <% end %>
          </td>
          
          <td>
            <%= link_to "削除", public_favorite_item_path(favorite_item.id), method: :delete, class: "btn-revers"%>
          </td>

        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>