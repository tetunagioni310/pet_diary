<div class="container">
  <div class="col-md-10 h4 bold mx-auto">表示名変更</div>

  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="col">
        <%= form_with model: @favorite_item, url: public_favorite_item_path(@favorite_item.id), method: :patch do |f| %>
        <%= render "public/shared/error_messages", resource: @favorite_item %>
          <div class="text-field row col mx-0 my-3 py-3">
            <%= f.label :favorite_item_name, class: "col-sm-3 bold col-form-label" %>
            <div class="col-sm-9">
              <%= f.text_field :favorite_item_name, class: "form-cocntrol col-8" %>
              <%= f.submit "変更", class: "btn btn-success col-3" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>

  <div class="col-md-10 mx-auto my-3">
    <%= render "public/shared/back_page" %>
  </div>
</div>