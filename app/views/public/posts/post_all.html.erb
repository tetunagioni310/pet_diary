<div class="container">
  <div class="tab-area">

    <input type="radio" name="tab_name" id="tab1" checked>
    <label class="tab_class bold" for="tab1">全ての投稿</label>
    <%= render 'public/shared/post_all_tab', posts: @posts, post_all: @post_all, group: "全て", keyword: @keyword, page: "posts_page" %>

    <!--犬の投稿タブ-->
    <input type="radio" name="tab_name" id="tab2">
    <label class="tab_class bold" for="tab2">犬の投稿</label>
    <%= render 'public/shared/post_all_tab', posts: @dog_posts, post_all: @dog_post_all, group: "犬", keyword: @keyword, page: "dog_posts_page" %>

    <!--猫の投稿タブ-->
    <input type="radio" name="tab_name" id="tab3" >
    <label class="tab_class bold" for="tab3">猫の投稿</label>
    <%= render 'public/shared/post_all_tab', posts: @cat_posts, post_all: @cat_post_all, group: "猫", keyword: @keyword, page: "cat_posts_page" %>

    <!--その他投稿タブ-->
    <input type="radio" name="tab_name" id="tab4" >
    <label class="tab_class bold" for="tab4">その他投稿</label>
    <%= render 'public/shared/post_all_tab', posts: @other_posts, post_all: @other_post_all, group: "その他", keyword: @keyword, page: "other_posts_page" %>

</div>