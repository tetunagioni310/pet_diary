              <% @cat_posts.each do |cat_post| %>
                <section class="col-lg-3 border mx-auto my-1">
                    <%= link_to public_post_path(cat_post.id) do %>
                      <div class="col p-0 m-0">
                        <% if cat_post.post_image.attached? %>
