                    <div class="row col customer-image">
                      <%= image_tag other_post.pet.get_pet_image(30,30) %>
                      <%= link_to other_post.pet.pet_name + other_post.pet.pet_gender, public_customer_path(other_post.customer.id), class: "other-link ml-2" %>
                    </div>

                  <h2 class="border-bottom"><%= other_post.post_title.truncate(10) %></h2>
                  <time><%= other_post.start_time.strftime('%Y/%m/%d %H:%M') %></time>

              </section>
            <% end %>
          </div>
          <% else %>
            <div class="no-post h2">
              投稿はありません
            </div>
          <% end %>
        </div>
          <%= paginate @other_posts %>
        </div>
      <% else %>
        <div class="col-10 m-auto text-field customer-content">
          <div class="no-post h2">
            投稿はありません
          </div>
        </div>
      <% end %>
  </div>
</div>