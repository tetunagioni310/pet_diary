<div class="container">
  <div class="tab-area col">

      <input type="radio" name="tab_name" id="tab1" checked>
      <label class="tab_class bold" for="tab1">全ての投稿</label>

      <div class="content-class col">
          <div class="col text-field customer-content text-center">
            <div class="h4 bold col">全ての投稿</div>

            <div class="row col all_post">
              <% @posts.each do |post| %>
                <div class="col-lg-3 text-field border mx-auto">
                  <%= link_to public_post_path(post.id) do %>
                    <div class="col p-0 m-0" style="height: 200px;">
                      <%= image_tag post.post_image.variant( resize: "500x500", gravity: :center, crop: "500x500+0+0" ).processed, width: "100%", height: "100%", class: "object-fit-img col px-0 py-md-1 mx-auto" %>
                    </div>
                    <div>
                      <%= image_tag post.customer.get_customer_image(50,50) %>
                      <%= link_to post.customer.nick_name + post.pet.pet_gender, public_customer_path(post.customer.id), class: "mr-2" %>
                    </div>
                    <div>
                      <%= post.post_title.truncate(10) %>
                    </div>
                    <div>
                      <time><%= post.start_time.strftime('%Y/%m/%d %H:%M') %></time>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>

          </div>
      </div>

      <input type="radio" name="tab_name" id="tab2">
      <label class="tab_class bold" for="tab2">犬の投稿</label>
      <div class="content-class col">
          <div class="col text-field customer-content">
            <div class="col row">

            </div>
            <ul class="m-3">
              <li></li>
              <li></li>
              <li></li>
            </ul>
          </div>
      </div>



      <input type="radio" name="tab_name" id="tab3" >
      <label class="tab_class bold" for="tab3">猫の投稿</label>
      <div class="content-class col">
            <div class="col text-field customer-content">
              <div class="col row">
              </div>

              <ul class="m-3">
                <li></li>
                <li></li>
                <li></li>
              </ul>
            </div>
      </div>

      <input type="radio" name="tab_name" id="tab4" >
      <label class="tab_class bold" for="tab4">その他投稿</label>
      <div class="content-class col">
            <div class="col text-field all-post">
              <div class="col row">
              </div>

              <ul class="m-3">
                <li></li>
                <li></li>
                <li></li>
              </ul>
            </div>
      </div>
  </div>
</div>