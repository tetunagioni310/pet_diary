<div class="container">
  <div class="d-flex">
    <h2>記事詳細</h2>
  </div>
  <div class="post-show row">
    <div class="content col">
      <div class="post-image col-md-6">
        <% if @post.post_image.attached? %>
          <%= image_tag @post.post_image %>
        <% end %>
      </div>

      <div class="post-text col">
        <h3><%= @post.post_title %><br></h3>

        <p>
          <%= @post.post_content %><br>
        </p>
        <div class="h6"><%= @post.created_at.strftime("%Y年%m月%d日")%>  <span><%= @post.pet.pet_name %><%= @post.pet.gender == "♂" ? "くん" : "ちゃん" %></span>の投稿</div>
      </div>

    </div>
  </div>
</div>