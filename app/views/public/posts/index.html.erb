<div class="container">
  <h2><%= current_customer.nick_name %>さんの投稿一覧</h2>
  <%= link_to "新規投稿", new_public_post_path, class: "btn btn-success my-3" %>
  <div class="row">
    <div class="col post-index">
      <table class="col-10">
        <thead>
          <th>ペット名</th>
          <th>投稿タイトル</th>
          <th>投稿日</th>
          <th>更新日</th>
          <th colspan="2"></th>
        </thead>
        
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= link_to post.pet.pet_name, public_pet_path(post.pet.id) %></td>
              <td><%= link_to post.post_title, public_post_path(post.id) %></td>
              <td><%= post.created_at.strftime("%Y年%m月%d日") %></td>
              <td><%= post.updated_at.strftime("%Y年%m月%d日") %></td>
              <td><%= link_to "編集", edit_public_post_path(post.id), class: "btn btn-secondary" %></td>
              <td><%= link_to "削除", public_post_path(post.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>