<div class="container">
  <div class="col-md-9 mx-auto mb-5 h4 bold">新規投稿</div>
  <div class="mb-5 row">
    <div class="col-md-9 m-auto">

        <%= form_with model: @post, url: public_posts_path, method: :post do |f| %>
        <%= render "public/shared/error_messages", resource: @post %>

        <div class="col text-field">

          <div class="col-md-10 my-3 mx-md-3">
            <div class="form-group row">
              <%= f.label :pet_id, class: "col-md-3 col-form-label px-0 bold" %>
              <%= f.select :pet_id, options_from_collection_for_select(current_customer.pets, :id, :pet_name), class: "form-control col-md-9" %>
            </div>

            <div class="form-group row">
              <%= f.label :post_title, class: "col-md-3 col-form-label px-0 bold" %>
              <%= f.text_field :post_title, class: "form-control col-md-9" %>
            </div>

            <div class="form-group row">
              <%= f.label :post_content, class: "col-md-3 col-form-label px-0 bold" %>
              <%= f.text_area :post_content,rows: "5", class: "form-control col-md-9" %>
            </div>

            <div class="form-group row">
              <%= f.label :post_image, class: "col-md-3 col-form-label px-0 bold" %>
              <%= f.file_field :post_image, use_month_numbers: true, class: "col-md-9 px-0" %>
            </div>

            <div class="row">
              <div class="col-md-3"></div>
              <div class="col-9 p-0"><%= f.submit "新規投稿", class: "btn btn-success text-center col-md-8 bold" %></div>
            </div>
          </div>
        </div>

        <% end %>

    </div>

  </div>

  <div class="col-md-9 m-auto my-5">
    <%= link_to  public_posts_path, class: "default-color other-link" do %>
      <i class="fas fa-solid fa-reply mr-2"></i>投稿一覧
    <% end %>
  </div>
</div>