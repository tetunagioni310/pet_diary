<div class="container">
  <div class="row">
    <div class="col">
      <div class="follow-field col text-field">
        <table>
          <tr>
            <th colspan="2">
              <%= link_to public_customer_path(current_customer.id), class: "other-link" do %>
                <i class="fas fa-solid fa-reply mr-2"></i>フォロー
              <% end %>
            </th>
          </tr>
          <% if @customers.count >= 1 %>
          <tr>
            <td></td>
            <td>
              <% @customers.each do |customer| %>
                <div class="row">

                  <%= image_tag customer.get_customer_image(50,50)%>
                  <%= link_to customer.nick_name, public_customer_path(customer.id), class: "bold other-link mt-2 ml-2" %>
                  <div class="ml-3">
                      <% if current_customer.following?(customer) %>
                        <%= link_to "フォロー解除", public_customer_relationships_path(customer.id), class: "btn btn-outline-danger btn-sm mt-2", method: :delete %>
                      <% else %>
                        <%= link_to "+フォロー", public_customer_relationships_path(customer.id), class: "btn btn-success btn-sm mt-2", method: :post %>
                      <% end %>
                  </div>
                </div>
              <% end %>
            </td>
          </tr>
          <% else %>
          <tr>
            <td>
              現在フォローしていません
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
