<div class="container">
  <div class="row">
    <div class="col login-page">
      <h2 class="mb-5">ログイン</h2>
      <%= form_with model: @customer, url: customer_session_path, method: :post do |f| %>
      <%= render "public/shared/error_messages", resource: @customer %>


        <h4 class="mb-3">会員の方はこちらからログイン</h4>
          <table class="customer_info customer_form">
            <thead>
              <th></th>
              <th></th>
              <th></th>
            </thead>
            <tbody>
              <tr></tr>
              <tr></tr>
              <tr>
                <td><%= f.label :email, "メールアドレス" %></td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
              </tr>
              <tr>
                <td><%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %></td>
                <td><%= f.password_field :password, autocomplete: "current-password" %></td>
              </tr>
              <tr>
                <td></td>
                <td>
                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td></td>
                <td><%= f.submit "ログイン", class: "btn btn-success" %></td>
              </tr>
            </tbody>
          </table>
      <% end %>

      <div class="pt-5">
        <h4 class="mb-5">登録がお済みでない方</h4>
        <p><%= link_to "こちら", new_customer_registration_path, class: "btn-revers mr-3" %>から新規登録を行なってください。</p>
      </div>

      <div class="pt-5">
        <h4 class="mb-5">管理者ログイン</h4>
        <p><%= link_to "こちら", new_admin_session_path, class: "btn-revers mr-3" %>へ</p>
      </div>

      <div class="pt-5">
        <h4 class="mb-5">ゲストログイン（閲覧用）</h4>
        <p><%= link_to 'こちら', public_guest_sign_in_path, method: :post, class: "btn-revers mr-3" %>へ</p>
      </div>
    </div>
  </div>
</div>
